<div class="discs__disc">
  <figure class="discs__disc__cover">
    {{#link-to "discs.show" disc}}
      <img src="{{disc.cover}}" alt="">
    {{/link-to}}
  </figure>
  <span class="discs__disc__artist-name">{{disc.artist}}</span>
  <span class="discs__disc__title">{{#link-to "discs.show" disc}}{{disc.title}}{{/link-to}}</span>
  <span class="discs__disc__title">{{disc.year}}</span>
</div>
